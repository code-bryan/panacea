<%= render "ui/header" %>

<% contacts = [
  { icon: "phone", type: "Phone", contact: "(555) 123-4567", details: "Mon-Fri, 9am - 6pm EST" },
  { icon: "envelope", type: "Email", contact: "support@gmail.com", details: "We reply within 24 hours" },
] %>

<main class="py-12 px-4 flex items-center justify-center flex-col gap-12">
  <div class="flex flex-col gap-12 max-w-full md:max-w-4xl">
    <div class="flex flex-col gap-5 items-center">
      <h1 h1 class="text-5xl text-slate-900 font-bold">Support Center</h1>
      <p class="text-lg leading-8 text-slate-600">We're here to help. Find the best way to get the assistance you need.</p>
    </div>

    <div class="flex flex-col md:flex-row gap-6 items-start"> 
      <%= render "ui/card" do %>
        <h2 class="text-2xl font-bold text-slate-900">Send us a message</h2>
        <p class="mt-2 text-slate-500">Fill out the form below and we'll get back to you as soon as possible.</p>

        <%= form_with model: @form, url: support_index_path, local: true, class: "flex flex-col gap-6 mt-6" do |f| %>
          <%= render "ui/form/form-field", f:f, name: :name, placeholder: "John Doe"  %>
          <%= render "ui/form/form-field", f: f, type: :email_field, name: :email, placeholder: "you@example.com" %>
          <%= render "ui/form/form-field", f:f, type: :text_area, name: :message, placeholder: "How can i help" %>

          

          <% if notice %>
            <%# TODO: migrate this to a ui component %>
            <div class="bg-green-100 p-4 rounded-md text-sm flex flex-row items-start gap-3">
              <%= heroicon_tag "check-circle", class: "size-5 text-green-500 shrink-0", variant: :solid %>
              <div class="flex flex-col gap-3 ">
                <span class="text-sm font-medium text-green-800">Message sent successfully</span>
                <span class="text-green-700"><%= notice %></span>
              </div>            
            </div>
          <% end %>

          <%= render "ui/form/submit",  f: f %>
        <% end %>
      <% end %>

      <%= render "ui/card" do %>
        <div class="flex flex-col gap-6">
          <div class="flex flex-col gap-1">
            <h2 class="text-2xl font-bold text-slate-900">Direct Contact</h2>
            <p class="mt-2 text-slate-500">For immediate assistance, please use the contact details below.</p>

          </div>

          

          <% contacts.each do |contact| %>
            <div class="flex gap-3 items-start">
              <div class="p-3 rounded-md bg-blue-50 ">
                <%= heroicon_tag contact[:icon], class: "size-5 text-blue-500", variant: :solid %>
              </div>

              <div>
                <p class="font-semibold text-lg"><%= contact[:type] %></p>
                <p class="text-md mt-1"><%= contact[:contact] %></p>
                <p class="text-sm text-slate-500"><%= contact[:details] %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</main>