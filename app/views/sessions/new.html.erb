<%= render "ui/wrappers/auth" do %>
  <%= form_with model: @form, url: login_path, local: true, class: "flex flex-col gap-2 w-full" do |f| %>
    <div class="flex flex-col gap-2">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="flex flex-col gap-2">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit "Login", class: "px-4 py-2 bg-amber-400 rounded-lg text-white" %>
  <% end %>
<% end %>
