<%= render "ui/wrappers/auth" do %>
  <div class="flex flex-col gap-2.5 mt-5 items-center">
    <h1 class="text-xl font-medium tracking-tight text-black">Check your email</h1>
    <p class="text-zinc-600 text-center">
      If an account with that email address exists, we have sent a password reset link. Please check your inbox.
    </p>


    <%= link_to "Back to Log In", auth_root_path, class: "bg-blue-500 py-3 w-full text-sm text-white rounded-md text-center mt-5" %>
  </div>
  <%= render "ui/footer", question: "Didn't receive the email?" %>
<% end %>
